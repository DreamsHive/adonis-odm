{
  "extends": "@adonisjs/tsconfig/tsconfig.package.json",
  "compilerOptions": {
    "rootDir": "./",
    "outDir": "./build",
    "allowJs": true,
    "declaration": true,
    "declarationMap": true
  },
  "include": [
    "src/**/*",
    "providers/**/*",
    "commands/**/*",
    "services/**/*",
    "configure.ts",
    "stubs/**/*"
  ],
  "exclude": [
    "examples/**/*",
    "docs/**/*",
    "scripts/**/*",
    "adonisrc.ts",
    "ace.js",
    "build/**/*",
    "node_modules/**/*"
  ]
}
